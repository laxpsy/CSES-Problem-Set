{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "compile",
      "command": "g++",
      "type": "shell",
      "args": ["-std=c++20", "-o", "${fileBasenameNoExtension}", "${file}"],
      "group": {
        "kind": "build",
        "isDefault": false
      }
    },
    {
      "label": "compile and run",
      "command": "g++ -std=c++20 -o ./${fileBasenameNoExtension} ${file} && ./${fileBasenameNoExtension} < ../input.txt > ../output.txt",
      "type": "shell",
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}
